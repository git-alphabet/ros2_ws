<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4" main_tree_to_execute="BehaviorTree">
  <BehaviorTree ID="BehaviorTree">
    <ReactiveSequence>
      <!-- 数据订阅模块 -->
      <SubAllRobotHP topic_name="robot_hp" robot_hp="{robot_hp}"/>
      <SubArmors topic_name="/detector/armors" armors="{armors}"/>
      <SubRobotStatus topic_name="robot_status" robot_status="{robot_status}"/>
      <SubGameStatus topic_name="game_status" game_status="{game_status}"/>

      <WhileDoElse>
        <!-- 比赛状态判断 -->
        <IsGameTime name="IsGameStart" 
                   message="{game_status}"
                   game_progress="4"
                   lower_remain_time="0"
                   higher_remain_time="300"/>

        <!-- 比赛进行时主逻辑 -->
        <ReactiveSequence>
          <!-- 云台控制模块 -->
          <WhileDoElse name="GimbalControl">
            <IsDetectEnemy message="{armors}"/>
            <RobotControl stop_gimbal_scan="True" chassis_spin_vel="0.5"/>
            <RobotControl stop_gimbal_scan="False" chassis_spin_vel="0.5"/>
          </WhileDoElse>

          <!-- 主决策逻辑 -->
          <WhileDoElse>
            <Sequence name="ActiveModeCondition">
              <IsDetectEnemy message="{armors}"/>
              <IsStatusOK message="{robot_status}" 
                         hp_threshold="400" 
                         heat_threshold="350"/>
            </Sequence>

            <!-- 主动模式：跟随攻击 -->
            <ReactiveSequence name="ActiveMode">
              <!-- 动态跟随逻辑 -->
              <RateController hz="5">
                <SentryFollower name="AutoFollow" 
                               topic="/goal_pose" 
                               follow_distance="2.0"/>
              </RateController>

              <!-- 应急响应模块 -->
              <WhileDoElse>
                <IsAttaked message="{robot_status}"/>
                <AsyncSequence name="EmergencyDodge">
                  <GetCurrentLocation current_location="{current_location}"/>
                  <MoveAround expected_nearby_goal_count="3"
                             expected_dis="0.3"
                             message="{current_location}"/>
                </AsyncSequence>
                <Fallback name="SupplyCheck">
                  <IsStatusOK message="{robot_status}"
                             hp_threshold="250"
                             heat_threshold="350"/>
                  <!-- Converted from goal_pose to goal_x/goal_y -->
                  <SendGoal name="GotoSupply" 
                           goal_x="-2.5" goal_y="4.07"/>
                </Fallback>
              </WhileDoElse>
            </ReactiveSequence>

            <!-- 被动模式：巡逻/占点 -->
            <ReactiveSequence name="PassiveMode">
              <WhileDoElse>
                <IsGameTime name="FinalStage" 
                           message="{game_status}"
                           game_progress="4"
                           lower_remain_time="200"
                           higher_remain_time="245"/>
                  <RateController hz="1">
                  <!-- Converted from goal_pose to goal_x/goal_y -->
                  <SendGoal name="OccupyCenter" 
                           goal_x="3.0" goal_y="0.4"/>
                </RateController>
                <WhileDoElse name="PatrolLogic">
                  <IsFriendOK message="{robot_hp}" friend_color="red"/>
                    <RateController hz="1">
                    <!-- Converted from goal_pose to goal_x/goal_y -->
                    <SendGoal name="PatrolLeft" 
                             goal_x="5.1" goal_y="1.9"/>
                  </RateController>
                    <RateController hz="1">
                    <!-- Converted from goal_pose to goal_x/goal_y -->
                    <SendGoal name="PatrolCenter" 
                             goal_x="3.0" goal_y="1.0"/>
                  </RateController>
                </WhileDoElse>
              </WhileDoElse>
            </ReactiveSequence>
          </WhileDoElse>
        </ReactiveSequence>

        <!-- 比赛未进行时返回基地 -->
        <ReactiveSequence name="ReturnHome">
          <RateController hz="1">
            <!-- TODO: set goal_x and goal_y -->
            <SendGoal name="HomePosition" 
                     goal_x="0.0" goal_y="0.0"/>
          </RateController>
          <RobotControl stop_gimbal_scan="True" chassis_spin_vel="0.0"/>
        </ReactiveSequence>
      </WhileDoElse>
    </ReactiveSequence>
  </BehaviorTree>

  <!-- 节点模型定义 -->
  <TreeNodesModel>
    <!-- 原有节点定义 -->
    <Action ID="GetCurrentLocation">
      <output_port name="current_location" default="{current_location}"/>
    </Action>
    
    <!-- 新增跟随节点 -->
    <Action ID="SentryFollower">
      <input_port name="topic" default="/goal_pose"/>
      <input_port name="follow_distance" default="2.0"/>
      <output_port name="current_goal" default="{current_goal}"/>
    </Action>

    <!-- 其他节点保持原有定义 -->
    <Action ID="IsAttaked">
      <input_port name="message" default="{robot_status}"/>
    </Action>
    <Action ID="IsDetectEnemy">
      <input_port name="message" default="{armors}"/>
    </Action>
    <Action ID="IsFriendOK">
      <input_port name="message" default="{robot_hp}"/>
      <input_port name="friend_color" default="red"/>
    </Action>
    <Action ID="IsGameTime">
      <input_port name="message" default="{game_status}"/>
      <input_port name="game_progress" default="4"/>
      <input_port name="lower_remain_time" default="0"/>
      <input_port name="higher_remain_time" default="300"/>
    </Action>
    <Action ID="IsStatusOK">
      <input_port name="message" default="{robot_status}"/>
      <input_port name="hp_threshold" default="100"/>
      <input_port name="heat_threshold" default="350"/>
    </Action>
    <Action ID="MoveAround">
      <input_port name="expected_nearby_goal_count" default="5"/>
      <input_port name="expected_dis" default="0.3"/>
      <input_port name="message" default="{current_location}"/>
    </Action>
    <Decorator ID="RateController">
      <input_port name="hz">Rate</input_port>
    </Decorator>
    <Action ID="RobotControl">
      <input_port name="stop_gimbal_scan" default="True"/>
      <input_port name="chassis_spin_vel" default="False"/>
    </Action>
    <Action ID="SendGoal">
      <input_port name="goal_pose" default="{goal_pose}"/>
      <input_port name="goal_x" default="0.0"/>
      <input_port name="goal_y" default="0.0"/>
    </Action>
    <Action ID="SubAllRobotHP">
      <input_port name="topic_name" default="robot_hp"/>
      <output_port name="robot_hp" default="{robot_hp}"/>
    </Action>
    <Action ID="SubArmors">
      <input_port name="topic_name" default="/detector/armors"/>
      <output_port name="armors" default="{armors}"/>
    </Action>
    <Action ID="SubGameStatus">
      <input_port name="topic_name" default="game_status"/>
      <output_port name="game_status" default="{game_status}"/>
    </Action>
    <Action ID="SubRobotStatus">
      <input_port name="topic_name" default="robot_status"/>
      <output_port name="robot_status" default="{robot_status}"/>
    </Action>
  </TreeNodesModel>
</root>
